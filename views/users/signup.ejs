<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on Wanderlust</h2>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          placeholder="enter username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Required Name</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          placeholder="enter an E-mail id"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Required ID</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          placeholder="enter a strong password"
          type="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Required Password</div>
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
